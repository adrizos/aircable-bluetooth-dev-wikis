{% extends "admin/base_site.html" %}
{% load i18n admin_modify adminmedia sensorsdk %}

{% if help_content %}
{% block coltype %}colMS{% endblock %}
{% endif %}

{% block title %}{% trans 'Email Test Page' %}|{% trans 'SensorSDK Setup' %}{% endblock %}

{% block branding %}
<h1 id="site-name">{% trans 'SensorSDK Setup' %}</h1>
{% endblock %}

{% block extrahead %}{{ block.super }}
    <script type="text/javascript" src="../../jsi18n/"></script>
    {{ media }}
{% endblock %}

{% block nav-global %}
<!-- a href="/sensorsdk" style="margin: 0 12px">{% trans 'SensorSDK Home' %}</a -->
{% endblock %}

{% block extrastyle %}

    {{ block.super }}

    <link rel="stylesheet" type="text/css" href="{% admin_media_prefix %}css/forms.css" />

    <style media="all" type="text/css">
	{% include "admin/sensorsdk/base.css" %}
    </style>

{% endblock %}

{% block bodyclass %}email-setup change-form{% endblock %} 

{% block breadcrumbs %}
<div class="breadcrumbs">
     <a href="../">{% trans "Home" %}</a> &rsaquo;
     {{ step }}
</div>
{% endblock %} 

{% block content %}<div id="content-main">
    	    <h2>{% trans "Mail Configuration Test" %}</h2>
    	    <div>
            {% if exception %}
            <p class="errornote">{% blocktrans %}An error ocurred while trying to connect to the web server. Reason{% endblocktrans %}: {{ exception }}</p>
            {% endif %}
            <div class="form-row">
        	<label>{% trans "Test result" %}</label>
        	<label>{{ state }}</label>
        	<a href="." class="myviewsitelink">{% trans "Configure Again" %}</a>
        	<a href="../" class="myviewsitelink">{% trans "Back to SensorSDK Configuration" %}</a>
    	    </div>
    	    </div>
</div>
{% endblock %}
