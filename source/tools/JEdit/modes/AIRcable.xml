			<KEYWORD3>uartcfg</KEYWORD3>
			<KEYWORD3>uartoff</KEYWORD3>
			<KEYWORD3>date</KEYWORD3>
			<KEYWORD3>reboot</KEYWORD3>
			<KEYWORD3>nextsns</KEYWORD3>
			<KEYWORD3>sensor</KEYWORD3>
			<KEYWORD3>setdate</KEYWORD3>
			<KEYWORD3>zerocnt</KEYWORD3>
			<KEYWORD3>readcnt</KEYWORD3>
			<KEYWORD3>uartint</KEYWORD3>
			
			<!-- File System Functions -->
			<KEYWORD3>open</KEYWORD3>
